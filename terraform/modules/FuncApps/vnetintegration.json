{
  "$schema": "https://schema.management.azure.com/schemas/2015-01-01/deploymentTemplate.json#",
  "contentVersion": "1.0.0.0",
  "parameters": {
    "siteName": {
      "type": "string"
    },
    "slot": {
      "type": "string"
    },
    "location": {
      "type": "string"
    },
    "farm_id": {
      "type": "string"
    },
    "subnet_resourceid": {
      "type": "string"
    },
    "null": {
      "type": "string"
    }
  },
  "resources": [
    {
      "type": "Microsoft.Web/sites/config",
      "apiVersion": "2016-08-01",
      "name": "[concat(parameters('siteName'), '/virtualNetwork')]",
      "location": "UK West",
      "properties": {
        "subnetResourceId": "[parameters('subnet_resourceid')]",
        "swiftSupported": true
      }
    },
    {
      "type": "Microsoft.Web/sites/slots",
      "apiVersion": "2018-11-01",
      "name": "[concat(parameters('siteName'), '/', parameters('slot'))]",
      "location": "[parameters('location')]",
      "kind": "functionapp",
      "properties": {
        "enabled": true,
        "serverFarmId": "[parameters('farm_id')]",
        "httpsOnly": true
      }
    },
    {
      "type": "Microsoft.Web/sites/slots/config",
      "apiVersion": "2016-08-01",
      "name": "[concat(parameters('siteName'), '/', parameters('slot'), '/web')]",
      "location": "[parameters('location')]",
      "dependsOn": [
        "[resourceId('Microsoft.Web/sites/slots', parameters('siteName'), parameters('slot'))]"
      ],
      "properties": {
        "defaultDocuments": [],
        "netFrameworkVersion": "v4.0",
        "use32BitWorkerProcess": true,
        "webSocketsEnabled": false,
        "alwaysOn": true,
        "managedPipelineMode": "Integrated",
        "virtualApplications": [
          {
            "virtualPath": "/",
            "physicalPath": "site\\wwwroot",
            "preloadEnabled": true,
            "virtualDirectories": null
          }
        ],
        "siteAuthSettings": {
          "enabled": false
        },
        "cors": {
          "allowedOrigins": [],
          "supportCredentials": false
        },
        "http20Enabled": false,
        "minTlsVersion": "1.2"
      }
    },
    {
      "type": "Microsoft.Web/sites/slots/config",
      "apiVersion": "2016-08-01",
      "name": "[concat(parameters('siteName'),'/', parameters('slot'),'/virtualNetwork')]",
      "location": "UK West",
      "dependsOn": [
        "[resourceId('Microsoft.Web/sites/slots', parameters('siteName'), parameters('slot'))]"
      ],
      "properties": {
        "subnetResourceId": "[parameters('subnet_resourceid')]",
        "swiftSupported": true
      }
    }
  ]
}
